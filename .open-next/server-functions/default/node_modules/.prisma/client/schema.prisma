generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("LANDLORD") // LANDLORD, TENANT, SUPER_ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  subscription  Subscription?
  properties    Property[]     @relation("LandlordProperties")
  tenancy       Tenant?
  tickets       Ticket[]
  notifications Notification[]
}

model Subscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
  planId String
  plan   Plan   @relation(fields: [planId], references: [id])
  status String // active, past_due, canceled

  // Phase 5: PayPal Integration
  paypalSubscriptionId String? // PayPal subscription ID
  paypalCustomerId     String? // PayPal customer/payer ID
  paypalPlanId         String? // PayPal plan ID reference

  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Plan {
  id            String         @id @default(cuid())
  name          String
  slug          String         @unique
  price         Int // in cents
  features      String
  maxProperties Int
  subscriptions Subscription[]
}

model Property {
  id           String  @id @default(cuid())
  landlordId   String
  landlord     User    @relation("LandlordProperties", fields: [landlordId], references: [id])
  address      String
  city         String
  state        String
  zip          String
  rentAmount   Int
  bedrooms     Int? // New: number of bedrooms
  bathrooms    Int? // New: number of bathrooms
  propertyType String? // New: HOUSE, APARTMENT, CONDO, etc
  status       String  @default("VACANT") // VACANT, OCCUPIED, MAINTENANCE

  // Phase 4: Public Listing Fields
  slug        String? @unique // SEO-friendly URL slug
  description String? // AI-generated or manual
  amenities   String? // JSON string array
  isListed    Boolean @default(false) // Public visibility toggle

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenants      Tenant[]
  tickets      Ticket[]
  images       PropertyImage[]
  marketing    MarketingKit?
  applications Application[] // New: tenant applications
}

model PropertyImage {
  id         String   @id @default(cuid())
  url        String // Cloudflare R2 public URL
  publicId   String? // R2 object key for deletion
  order      Int      @default(0) // Display order
  size       Int? // File size in bytes
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model MarketingKit {
  id             String   @id @default(cuid())
  propertyId     String   @unique
  property       Property @relation(fields: [propertyId], references: [id])
  landingPageUrl String?
  socialPostUrl  String?
  description    String?
}

model Tenant {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  leaseStart DateTime
  leaseEnd   DateTime
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  status      String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])
  createdAt   DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Phase 4: Property Application Model
model Application {
  id         String   @id @default(cuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  // Applicant Info
  name    String
  email   String
  phone   String?
  message String? // Additional notes from applicant

  // Application Status
  status String @default("NEW") // NEW, VIEWED, CONTACTED, ACCEPTED, REJECTED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
